{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2018",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "es2018"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}